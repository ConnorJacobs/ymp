rule diamond_makedb:
    "Build Diamond index file"
    message:
        "Diamond: running makedb on {input}"
    input:
        ref = "{path}/{file}.fastp.gz"
    params:
        db  = "{path}.diamond/{file}"
    output:
        db  = "{params.db}.dmnd"
    log:
              "{params.db}.log"
    conda:
        "diamond.yml"
    params:
        mem = icfg.mem("32g")
    threads:
        16
    shell: """
    diamond makedb \
    --in {input.ref} \
    --db {params.db} \
    --threads {threads} \
    >{log} 2>&1
    """


with Stage("map_diamond") as S:
    S.doc("""
